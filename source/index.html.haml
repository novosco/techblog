.container
  #main
    .articles
      .article-featured
        %h2 Article Title Goes here
      .articles-list
        %h2 Recent Articles
        %ol
          - blog.articles.each do |article|
            %li
              = link_to article.title, article
              %span= article.date.strftime('%b %e')
              %span= author_link(article.data.author)
    %aside.sidebar
      %h2 Tags
      %ol
        - blog.tags.each do |tag, articles|
          %li
            = link_to tag, tag_path(tag)
            (#{articles.size})