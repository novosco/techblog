- content_for :title do
  #{author.name}

.banner
  .layout-wrapper
    .layout-inner
      %h1= author.name
      %h2 bio bio bio bio bio bio bio bio bio bio bio bio bio bio bio bio bio bio bio bio bio

.container
  #main
    .articles
      %section.articles-recent
        %h1.small-h1 Authors Articles
        = partial "shared/article_list", :locals => { :articles => blog.articles.select { |a| a.data.author == author.twitter } }

    %aside.sidebar
      %section.twitter
        - if author.twitter_widget_id
          = partial "shared/twitter_widget", :locals => {:twitter_id => author.twitter, :twitter_widget_id => author.twitter_widget_id}

